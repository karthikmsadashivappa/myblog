<!DOCTYPE html>
<html>
  <head>
    <title>Myblog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Raleway' %>
    <%= stylesheet_link_tag 'application', 'https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<div id="sidebar">
		<div id="logo">
			<%= link_to root_path do %>
				<%= image_tag "logo.png" %>
			<% end %>
		</div>

		<ul>
			<li class="category">Website</li>
			<li><%= link_to "Blog", root_path %></li>
			<li><%= link_to "About", about_path %></li>
		</ul>

		<ul>
			<li class="category">Social</li>
			<li><a href="https://github.com/karthikmsadashivappa"><i class="fa fa-github-square fa-3x"></i></a></li>
			<li><a href="https://www.linkedin.com/in/karthik-m-sadashivappa-4a4b8b107/"><i class="fa fa-linkedin-square fa-3x"></i></a></li>
			<li><a href="https://www.instagram.com/karthik_m_sadashivappa/"><i class="fa fa-instagram fa-3x"></i></a></li>
			<li><a href="mailto:ms18karthik@gmail.com"></a>Email</li>
		</ul>
		<% if !user_signed_in? %>
	<div class="sign_in">Admin Login</div>
	<% end %>
</div>

<div id="main_content">
	<div id="header">
	<% if current_page?(root_path) %>
		<p>All Posts</p>
	<% elsif current_page?(about_path) %>
		<p>About</p>
	<% else %>
	<%= link_to "Back to All Posts", root_path %>
	<% end %>

	<% if user_signed_in? %>
		<div class="buttons">
		<button class="button"><%= link_to "New Post", new_post_path %></button>	
		<button class="button">Log Out</button>
		</div>
	<% end %>
	</div>
	<% flash.each do |name, msg| %>
	<%= content_tag(:div, msg, class: "alert") %>
	<% end %>

		 <%= yield %>


</div>




   
  </body>
</html>
